{
  "version": 2,
  "builds": [
    {
      "src": "server.js", // Replace with your entry point file
      "use": "@vercel/node" // Use the Vercel Node.js runtime
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Match all API routes
      "dest": "server.js" // Direct requests to your Node.js server
    },
    {
      "src": "/(.*)", // Match all other routes
      "dest": "/index.html" // Direct requests to your frontend (if applicable)
    }
  ]
}
